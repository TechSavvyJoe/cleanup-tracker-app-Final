# Production Environment Variables
# Copy this file to .env and fill in your actual values

# Node Environment
NODE_ENV=production

# Server Port (will be overridden by hosting platform)
PORT=5051

# MongoDB Connection (replace with your production MongoDB URL)
MONGODB_URI=mongodb://localhost:27017/cleanup-tracker

# JWT Secret for authentication (generate a secure random string)
JWT_SECRET=your-super-secure-jwt-secret-here

# Google Sheets CSV URL for inventory import (optional)
INVENTORY_CSV_URL=your-google-sheets-csv-url-here

# CORS Origin (your frontend domain)
CORS_ORIGIN=https://your-domain.com