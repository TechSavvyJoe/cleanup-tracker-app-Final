# MongoDB Connection
MONGO_URI=mongodb://localhost:27017/cleanup-tracker
# For cloud deployment, use: mongodb+srv://<user>:<pass>@<cluster>/<db>?retryWrites=true&w=majority

# JWT Secret (REQUIRED in production - generate with: openssl rand -base64 32)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Server Configuration
PORT=5051
NODE_ENV=development

# Frontend URLs for CORS (comma-separated for multiple domains)
FRONTEND_URL=http://localhost:3000,https://yourdomain.com

# Google Sheets CSV URL (optional)
INVENTORY_CSV_URL=https://docs.google.com/spreadsheets/d/e/2PACX-1vSTW7Nwrbbl3Lp7R3RlKfSx-cd1tAffBzTINNOrCnaU1wp3kA7av63Y5Af8Jn4ATMDB09XcIAO_wodU/pub?output=csv

# Rate Limiting (requests per 15 minutes)
RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_MAX=5

# File Upload Limits
UPLOAD_LIMIT=10mb